<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_rv_result_trending_item"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_poster_trending"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_gravity="center|start"/>

        <TextView
            android:id="@+id/tv_name_trending"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_first_air_date_trending"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_overview_trending"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/img_btn_item_rv_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/icon_forward"
            android:layout_gravity="center|bottom"
            android:layout_margin="5dp"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>